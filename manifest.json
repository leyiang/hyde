{
  "manifest_version": 2,
  "name": "hyde - hide video controls on any site",
  "version": "1.1",
  "description": "Press Ctrl+Q to hide or show the YouTube video player controls.",
  "icons": { 
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "commands": {
    "hide": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "hide/show controls"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/hide.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_page": "src/options/options.html"
}
